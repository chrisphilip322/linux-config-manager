[push]
    default = current
[alias]
    s = !$HOME/.config/common-functions.bash git-branch-status
    l = log --oneline -n 20
    amend = commit -a --amend --no-edit
    dt = difftool
    fix = !$EDITOR $(git diff --name-only | uniq)
    mark-fixed = !git diff --name-only | uniq | xargs git add
[color]
    ui = auto
[diff]
    tool = vimdiff
[difftool]
    prompt = false
